<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        Height="100" Width="400" WindowStartupLocation="CenterScreen"
        x:Class="MyAvaloniaApp.Dialog.MessageBoxWindow" ShowInTaskbar="False" CanResize="False"
        Title="Dialog">
    <DockPanel Margin="10">
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Bottom" HorizontalAlignment="Right">
            <Button Width="100" Click="Button_OnClick" HorizontalContentAlignment="Center">OK</Button>
        </StackPanel>
        <TextBlock Text="Welcome to Avalonia!"></TextBlock>
    </DockPanel>    
</Window>
